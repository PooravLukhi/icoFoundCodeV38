<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sending_layout"
        android:layout_width="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginVertical="3dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="3dp"
            android:gravity="end"
            android:background="@drawable/chat_bg"

            android:orientation="vertical"
            android:visibility="visible">
        <TextView
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Hi"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/send_message_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="time"
            android:textColor="@color/black"/>
        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/txt_profile_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/receiving_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/txt_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:background="@drawable/chat_bg2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/receive_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Hi"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/receive_message_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="time"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sending_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginVertical="3dp"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="visible">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/send_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/chat_bg"
            android:src="@drawable/model5"
            android:scaleType="centerCrop"
            android:textColor="#FFF"
            app:riv_corner_radius="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/receiving_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginVertical="3dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/receive_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/chat_bg2"
            android:src="@drawable/model6"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapLayoutSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginVertical="3dp"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="visible">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/webViewSend"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/chat_bg"
            android:src="@drawable/locationthumbnail"
            android:scaleType="center"
            app:riv_corner_radius="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapLayoutReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginVertical="3dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loc_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/receive_map"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/chat_bg2"
            android:src="@drawable/locationthumbnail"
            android:scaleType="center"
            app:riv_corner_radius="10dp" />

    </LinearLayout>


</LinearLayout>